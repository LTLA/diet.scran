#!/bin/bash

set -e
set -u

if [[ ! -e src/libscran ]]
then
    cd src
    git clone https://github.com/LTLA/libscran 
    cd libscran
    cmake . -DBUILD_TESTING=OFF
    cmake --build .
fi

if [[ ! -e src/qdtsne ]]
then
    cd src
    git clone https://github.com/LTLA/qdtsne
    cd qdtsne 
    cmake . -DBUILD_TESTING=OFF
fi

if [[ ! -e src/umappp ]]
then
    cd src
    git clone https://github.com/LTLA/umappp
    cd umappp 
    cmake . -DBUILD_TESTING=OFF
fi    
